<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/reload_btn"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/common_shape_rectangle_radius_16dp_white"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/common_ic_refresh_light_blue_24px_vector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/reload_message"
            android:textColor="@color/common_grey800"
            android:textSize="@dimen/common_font_s" />
    </LinearLayout>
</layout>